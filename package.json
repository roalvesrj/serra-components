{
  "name": "serra-components",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "yarn lint:check:build && yarn test:run && vite build",
    "build:force": "vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:check": "eslint . --max-warnings 0",
    "lint:check:build": "eslint . --max-warnings 10",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "pre-commit": "yarn format && yarn lint:fix && yarn test:run",
    "validate": "yarn format:check && yarn lint:check && yarn test:run"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^18.0.1",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "terser": "^5.44.0",
    "vite": "^7.1.6",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {}
}
